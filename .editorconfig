# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML
[*.html]
charset = utf-8
indent_size = 2
indent_style = space

# NJK
[*.njk]
charset = utf-8
indent_size = 2
indent_style = space

# Javascript
[*.js]
charset = utf-8
indent_size = 2
indent_style = space

# TypeScript
[*.ts]
charset = utf-8
indent_size = 2
indent_style = space

# CSS
[*.css]
charset = utf-8
indent_size = 2
indent_style = space
